<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TravelRecordApp"
             x:Class="TravelRecordApp.MainPage">

    <StackLayout VerticalOptions="Center" Margin="20">
        <!-- Place new controls here -->
        <Image x:Name="iconImage" Aspect="AspectFit" HorizontalOptions="FillAndExpand" Margin="0,0,0,50" HeightRequest="150"/>
        <Entry x:Name="emailEntry" Placeholder="Email Address" Keyboard="Email" TextColor="{StaticResource blueColor}"/>
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" TextColor="{StaticResource blueColor}"/>
        <Button x:Name="LogIn" Text="Log In" Margin="0,30,0,0"
                Clicked="LogIn_Clicked" TextColor="White"/>
    </StackLayout>

</ContentPage>
